fun pk(skey): pkey.
fun penc(bitstring, pkey): bitstring.
equation forall x: bitstring, y: skey;  pdec(penc(x, pk(y)), y) = x.



fun h(passwd): bitstring.

free c: channel.
free w: passwd [private].

weaksecret w.

